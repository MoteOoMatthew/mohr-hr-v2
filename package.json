{
  "name": "mohr-hr-v2",
  "version": "2.0.0",
  "description": "MOHR HR System V2 - Modern Cloud-Native HR Management",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install",
    "deploy:render": "echo 'Deploy to Render using the render.yaml configuration'"
  },
  "keywords": ["hr", "management", "api", "react", "google-integration"],
  "author": "MOHR Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 